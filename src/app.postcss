/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

@font-face {
	font-family: 'National';
	src: url('/fonts/NationalWeb-Bold.woff2') format('woff2');
	font-weight: bold;
	font-feature-settings: 'lnum';
}
@font-face {
	font-family: 'National';
	src: url('/fonts/NationalWeb-Book.woff2') format('woff2');
	font-weight: normal;
	font-feature-settings: 'lnum';
}

:root {
	--accent-color: theme(colors.uni-blue.DEFAULT);
}

.btn-group {
	@apply flex rounded-full overflow-clip flex-wrap border-uni-color-green border-2 mt-2;
	> .btn {
		@apply rounded-none text-sm px-4 py-1 grow text-center bg-white text-black;
		&.active {
			@apply bg-uni-color-green text-white;
		}
		&:hover {
			@apply scale-100;
		}
	}
}

.btn {
	@apply rounded bg-uni-color-dark-green text-white px-3 py-1 inline-block transition select-none cursor-pointer;
	&.btn-block {
		@apply block w-full;
	}
	&.active {
		@apply bg-green-600 text-white;
	}
	&.btn-md {
		@apply px-4 py-2;
	}
	&.btn-lg {
		@apply px-5 py-2;
	}
	&.btn-primary {
		@apply bg-uni-color-green;
		&.active {
			@apply bg-lime-800;
		}
	}
	&.btn-danger {
		@apply bg-red-600;
	}
	&.btn-text {
		@apply bg-transparent text-inherit font-semibold;
	}
	&.btn-icon {
		@apply flex items-center justify-center gap-0.5;
		.icon {
			@apply text-base;
		}
	}
	&:hover {
		transform: scale(1.03);
	}
}

h1,
h2,
h3,
h4 {
	@apply my-2;
	@apply font-bold;
	&h2 {
		@apply text-xl;
	}
	&:first-child {
		@apply mt-0;
	}
}

.uni-header {
	@apply mb-6 relative;
	&:after {
		@apply block w-56 max-w-full h-0.5 bg-uni-blue absolute -bottom-2;
		content: '';
	}
}
.uni-card {
	--card-padding: theme('spacing.7');
	@apply w-full bg-white shadow border-t-0 m-auto transition;
	@apply px-4 py-7;
	border-color: var(--accent-color);
}

.form-input,
.form-select {
	@apply rounded text-sm border-slate-300 p-2 leading-none;
}

.rangeSlider {
	@apply text-xs;
}
